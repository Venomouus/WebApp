@model ClienteModel
@{
    ViewData["Title"] = "Criar cliente";
}
<div>
    <h1 class="display-4">Editar Cliente</h1>
</div>

<form asp-controller="Cliente" asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Nm_Empresa" class="form-label">Nome Empresa</label>
        <input type="text" asp-for="Nm_Empresa" class="form-control" placeholder="Digite o Nome da Empresa" />
        @Html.ValidationMessageFor(x => x.Nm_Empresa)
    </div>

    <div class="form-group">
        <label for="Cd_Empresa">Codigo Empresa</label>
        <input type="number" asp-for="Cd_Empresa" class="form-control" placeholder="Digite o Codigo da Empresa" />
        @Html.ValidationMessageFor(x => x.Cd_Empresa)
    </div>

    <div class="form-group">
        <label for="Ds_Cnpj">Cnpj</label>
        <input type="number" asp-for="Ds_Cnpj" class="form-control" placeholder="Digite o CNPJ" />
        @Html.ValidationMessageFor(x => x.Ds_Cnpj)
    </div>

    <div class="form-group">
        <label for="Nr_Total_Onibus">Total Onibus</label>
        <input type="number" asp-for="Nr_Total_Onibus" class="form-control" placeholder="Digite Total de Onibus" />
        @Html.ValidationMessageFor(x => x.Nr_Total_Onibus)
    </div>

    <div class="form-group">
        <label for="Capacidade">Capacidade</label>
        <input type="number" asp-for="Capacidade" class="form-control" placeholder="Digite a Capacidade" />
        @Html.ValidationMessageFor(x => x.Capacidade)
    </div>
    <div class="form-group">
        <label for="Data_Cadastro">Data Cadastro</label>
        <input type="number" asp-for="Data_Cadastro" class="form-control" placeholder="Digite a Data" />
        @Html.ValidationMessageFor(x => x.Data_Cadastro)
    </div>
    <button type="submit" class="btn btn-primary btn-block">Alterar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Cliente" asp-action="Index" role="button">Voltar</a>
</form>