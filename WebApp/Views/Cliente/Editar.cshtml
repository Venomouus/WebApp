@model ClienteModel
@{
    ViewData["Title"] = "Editar cliente";
}
<div>
    <h1 class="display-4">Editar Cliente</h1>
</div>

<form asp-controller="Cliente" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nm_Empresa" class="form-control" placeholder="Digite  o nome" />
        @Html.ValidationMessageFor(x => x.Nm_Empresa)
    </div>

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="number" asp-for="Cd_Empresa" class="form-control" placeholder="Digite  o nome" />
        @Html.ValidationMessageFor(x => x.Cd_Empresa)
    </div>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="number" asp-for="Ds_Cnpj" class="form-control" placeholder="Digite  o nome" />
        @Html.ValidationMessageFor(x => x.Ds_Cnpj)
    </div>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="number" asp-for="Nr_Total_Onibus" class="form-control" placeholder="Digite  o nome" />
        @Html.ValidationMessageFor(x => x.Nr_Total_Onibus)
    </div>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="number" asp-for="Data_Cadastro" class="form-control" placeholder="Digite  o nome" />
        @Html.ValidationMessageFor(x => x.Data_Cadastro)
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-secondary btn-block" asp-controller="Cliente" asp-action="Index" role="button">Voltar</a>
</form>