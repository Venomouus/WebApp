@model List<ClienteModel>
@{
    ViewData["Title"] = "Listagem de Clientes";
}


<div class="text-center">
    
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Cliente" asp-action="Criar">Adicionar Novo Cliente</a>
    </div>
    <br />

    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if(TempData["MensagemErro"] != null)
    {
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
    }

    <br />

    <h1 class="display-4">Listagem de contatos</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nm_Empresa</th>
                <th scope="col">Cd_Empresa </th>
                <th scope="col">CNPJ </th>
                <th scope="col">Nr_Total_Onibus </th>
                <th scope="col">Data_Cadastro</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ClienteModel cliente in Model)
                {
                    <tr>
                        <th scope="row">@cliente.Id</th>
                        <th scope="row">@cliente.Nm_Empresa</th>
                        <td>@cliente.Cd_Empresa</td>
                        <td>@cliente.Ds_Cnpj</td>
                        <td>@cliente.Nr_Total_Onibus</td>
                        <td>@cliente.Data_Cadastro</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="Apagar">Apagar</a>

                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>

    </table>

</div>