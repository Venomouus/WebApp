@model List<OnibusModel>
@{
    ViewData["Title"] = "Listagem de Onibus";
}


<div class="text-center">
    
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Onibus" asp-action="Criar">Adicionar Novo Onibus</a>
    </div>
    <br />

    @if(TempData["MensagemSucesso"] != null)
