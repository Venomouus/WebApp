                    </div>
                </td>


            </tr>
            @if (Model != null && Model.Any())
            {
                foreach (var onibus in Model)
                {
                    <tr>
                        <th scope="row">@onibus.Id</th>
                        <th>@onibus.Placa</th>
                        <td>@onibus.NumRota</td>
                        <td>@onibus.NomRota</td>
